<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
		alpha.disabled="0.5">

	<fx:Metadata>
        [HostComponent("com.rga.pearson.view.components.UIPanel")]
    </fx:Metadata>


	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
	</s:states>


	<s:Label text="{hostComponent.title}"
			 styleName="ui_title"
			 left="24"
			 top="16"/>


	<s:Rect id="leftLine"
			width="1"
			height="100%">
		<s:fill>
			<s:SolidColor color="#444444" alpha="0.5"/>
		</s:fill>
	</s:Rect>

	<s:Rect id="bottomLine"
			width="26"
			height="1"
			bottom="0">
		<s:fill>
			<s:SolidColor color="#444444" alpha="0.5"/>
		</s:fill>
	</s:Rect>


	<s:Group id="contentGroup"
			 left="0"
			 right="0"
			 top="0"
			 bottom="0"
			 minWidth="0"
			 minHeight="0">
		<s:layout>
			<s:VerticalLayout horizontalAlign="right"
							  verticalAlign="top"
							  gap="10"
							  paddingTop="60"
							  paddingRight="0"
							  paddingBottom="40"
							  paddingLeft="30"/>
		</s:layout>
	</s:Group>


</s:Skin>
